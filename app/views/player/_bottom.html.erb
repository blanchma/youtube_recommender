        </div>
      </div>
      <div class="results_box">
        <ul id="results_followers" class="results">
        </ul>
        <div id="paginate_followers" class="pagination">
          <ul>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="bottom-column" >
    <div class="title_section magenta">
      <span>Following</span>
      <%= image_tag "icons/light/20/btn_maximize.png", :id => "max_following", :height => "14", :width => "14",:alt => "max" %>
    </div>
    <div id="wrapper_following" class="wrapper" >
      <div id="search_following" class="search-section">
        <div>
          <%= text_field_tag :search_following_input, "", :class => "input_sidebar", :autocomplete => "off" %>
