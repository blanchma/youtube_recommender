<div id="sidebar">
  <div class="bottom-column" >
    <div class="title_section blue">
      <span>Search a friend</span>
      <%= image_tag "icons/light/20/btn_maximize.png", :id => "max_users", :height => "14", :width => "14",:alt => "max" %>
    </div>
    <div id="wrapper_users" class="wrapper"  >
      <div id="search_user" class="search-section">
        <div>
          <%= text_field_tag :search_users_input, "", :class => "input_sidebar", :autocomplete => "off" %>
          <%= link_to_function (image_tag "icons/light/20/btn_lupa.png"), :name => nil, :id => "btn_search_user", :class => "btn_search_sidebar" %>
        </div>
      </div>
      <div class="results_box">
        <ul id="results_user" class="results">
        </ul>
        <div id="paginate_users" class="pagination">
          <ul>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="bottom-column" >
    <div class="title_section yellow">
      <span>Followers</span>
      <%= image_tag "icons/light/20/btn_maximize.png", :id => "max_followers", :height => "14", :width => "14",:alt => "max" %>
