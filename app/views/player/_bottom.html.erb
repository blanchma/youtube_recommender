      </div>
    </div>
  </div>

  <div class="bottom-column wide-column" >
    <div class="title_section green">
      <span>What's happening?</span>
      <%= image_tag "/images/icons/light/20/btn_minimize.png", :id => "min_events", :height => "14", :width => "14",:alt => "min" %>
    </div>

    <div id="wrapper_events" class="wrapper">
      <div class="results_box">
        <div id="paginate_events" class="pagination">
          <ul>
          </ul>
        </div>
        <ul id="results_events" class="results">
        </ul>
      </div>
    </div>
  </div>
</div>

